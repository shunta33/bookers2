<%= render 'layouts/sidebar', user: @user, book: @book %>
<div class="col-md-8 offset-md-1">

  <h2>Books</h2>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= link_to attachment_image_tag(book.user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg"),user_path(book.user.id) %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
  </table>
</div>
