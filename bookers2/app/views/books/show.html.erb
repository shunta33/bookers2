<%= render 'layouts/sidebar', user: @user, book: @book_show %>
<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table">
    <tbody>
      <tr>
        <td>
          <%= link_to attachment_image_tag(@user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg"),user_path(@user.id) %>
          <br><%= link_to @user.name, user_path(@user.id)%>
        </td>
        <td><%= link_to @book.title, book_path(@book.id) %></td>
        <td><%= @book.body %></td>
        <% if @user.id == current_user.id %>
          <td><%= link_to "Edit", edit_book2_path(@book)%></td>
          <td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>