<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h1>Editing Book</h1>

  <%= form_with model:@book, local:true do |f| %>

      <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>



  <div class="form-group">
    <label for="inputTitle">Title</label>
    <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title", :class => "form-control book_title"%>
  </div>
  <div class="form-group">
    <label for="inputBody">Opinion</label>
    <%= f.text_area :body, autofocus: true, id:"inputBody", placeholder:"Opinion", :class => "form-control book_body" %>
  </div>
  <div class="form-group">
    <%= f.submit "Update Book", :class => "btn btn-success" %>
  </div>
  <% end %>

  <%= link_to "Show", book_path(@book.id) %>
   |
  <%= link_to "Back", books_path %>
</div>
