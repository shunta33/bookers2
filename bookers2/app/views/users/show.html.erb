<%= render 'layouts/sidebar', user: @user, book: @book_show %>

<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @book.each do |book| %>
      <tr>
        <td>投稿ユーザー画像：<%= link_to attachment_image_tag(@user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg"),user_path(@user.id) %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>